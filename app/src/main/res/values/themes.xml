<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SenakitchNew" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorpri</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Boton">
        <item name="colorSecondary">@color/eliminar</item>
        <item name="colorTertiary">@color/actualizar</item>
    </style>

    <style name="TextoEstilo">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.SenakitchNew" parent="Base.Theme.SenakitchNew" />

    <style name="Theme.SenakitchNew.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Theme.SenakitchNew.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SenakitchNew.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Crud.CrudPostActivity"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:scrollbarThumbVertical="@drawable/scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/logofinal2023"
                    android:layout_marginTop="0dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dirtyoldtown"
                    android:text="Subir Producto"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:gravity="center"
                    />


                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginTop="15sp"
                    android:ems="15"
                    android:hint="Nombre del producto"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:hintAnimationEnabled="true"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@null"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dirtyoldtown"
                        android:inputType="textEmailAddress"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="NestedScrolling">

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_marginTop="15sp"
                        android:hint="Precio del producto"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:hintAnimationEnabled="true"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dirtyoldtown"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />


                    </com.google.android.material.textfield.TextInputLayout>
                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="NestedScrolling">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_marginTop="15sp"
                        android:hint="Descripcion del producto"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:hintAnimationEnabled="true"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dirtyoldtown"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </com.google.android.material.textfield.TextInputLayout>

                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="NestedScrolling"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_marginTop="15sp"
                        android:hint="Cuantos productos"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:hintAnimationEnabled="true"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@null">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dirtyoldtown"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"/>
                    </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <ImageButton
                        android:id="@+id/imageUrl"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_gravity="center"
                        android:src="@drawable/carga4"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/app_name" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/btn_choose_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/carga"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#376A6363"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_return"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:contentDescription="hola"
                        android:fontFamily="@font/dirtyoldtown"
                        android:src="@drawable/nav_logout"
                        android:textColor="@color/white"
                        android:rotation="180"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/btn_upload_content"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="78dp"
                        android:layout_height="67dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:backgroundTint="@color/white"
                        android:contentDescription="hola"
                        android:fontFamily="@font/dirtyoldtown"
                        android:src="@drawable/baseline_arrow_downward_24"
                        android:textColor="@color/white"
                        android:rotation="180"
                        android:textSize="15sp" />
                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>